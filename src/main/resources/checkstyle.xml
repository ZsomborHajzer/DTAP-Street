<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">

        <!-- Checks for Javadoc comments -->
        <module name="JavadocMethod">
            <property name="allowMissingParamTags" value="true"/>
            <property name="allowMissingReturnTag" value="true"/>
        </module>
        <module name="JavadocType"/>
        <module name="JavadocVariable"/>
        <module name="MissingJavadocMethod"/>

        <!-- Class design -->
        <module name="FinalClass"/>

        <!-- Checks that class types are designed -->
        <module name="HideUtilityClassConstructor"/>
        <module name="InterfaceIsType"/>

        <!-- Checks for sizes -->
        <module name="FileLength">
            <property name="max" value="1500"/>
        </module>

        <!-- Checks for whitespace -->
        <module name="FileTabCharacter"/>

        <!-- Miscellaneous checks -->
        <module name="NewlineAtEndOfFile"/>
        <module name="Translation"/>

        <!-- Checks for naming conventions -->
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>
        <module name="ConstantName">
            <property name="format" value="^([A-Z][A-Z0-9]*(_[A-Z0-9]+)*)|serialVersionUID$"/>
        </module>
        <module name="LocalFinalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="MethodName">
            <property name="format" value="^[a-z][a-z0-9][a-zA-Z0-9_]*$"/>
        </module>
        <module name="PackageName">
            <property name="format" value="^[a-z]+(\.[a-zA-Z_][a-zA-Z_0-9]*)*$"/>
        </module>
        <module name="ParameterName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Module for check that there are no tab characters in the file. -->
        <module name="FileTabCharacter"/>

        <!-- Module for checking the ordering of import statements-->
        <module name="ImportOrder">
            <property name="option" value="bottom"/>
            <property name="severity" value="warning"/>
        </module>

        <!-- Module for Magic numbers -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="-1,0,1,2,3"/>
            <property name="ignoreHashCodeMethod" value="true"/>
        </module>

        <!-- Simplify boolean return -->
        <module name="SimplifyBooleanReturn"/>

        <!-- Enforce a "throws" clause is declared when a method throws a checked exception -->
        <module name="ThrowsCount">
            <property name="max" value="4"/>
        </module>

        <!-- Check for multiple variable declarations in the same line -->
        <module name="MultipleVariableDeclarations"/>

        <!-- Check that there are no empty statement blocks. -->
        <module name="EmptyBlock">
            <property name="option" value="text"/>
        </module>
    </module>
</module>